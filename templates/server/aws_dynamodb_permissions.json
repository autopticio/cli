{
	"Version": "2012-10-17",
	"Statement": [
    	{
        	"Effect": "Allow",
        	"Action": [
            	"dynamodb:PutItem",
            	"dynamodb:GetItem",
            	"dynamodb:DeleteItem",
            	"dynamodb:Scan",
            	"dynamodb:Query"
        	],
        	"Resource": [
            	"arn:aws:dynamodb:region:account-id:table/your-table-name"
        	]
    	},
    	{
        	"Effect": "Allow",
        	"Action": "dynamodb:CreateTable",
        	"Resource": "*"
    	}
	]
}

